<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ArenaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="gone">

        <Button
            android:id="@+id/redButton"
            android:layout_width="match_parent"
            android:layout_height="324dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="red Team" />

        <Button
            android:id="@+id/blueButton"
            android:layout_width="match_parent"
            android:layout_height="324dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="blue Team" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/allTextLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone">

        <TextView
            android:id="@+id/genInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="let the war begin"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/redTeamScore"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:layout_above="@+id/genInformation"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="111dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/blueTeamScore"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_below="@+id/genInformation"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="61dp"
            android:fontFamily="serif-monospace"
            android:text="0"
            android:textSize="36sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/allButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:visibility="visible">

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="play" />

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="86dp"
            android:text="Menu"
            tools:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>